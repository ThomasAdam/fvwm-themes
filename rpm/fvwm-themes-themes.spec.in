%define prefix /usr
%define ver @VERSION@
%define rel 1
%define c_p --disable-gnome-icons
%define m_p CFLAGS="-O2"

%define _sourcedir /tmp

Summary:   FVWM Themes, configurational framework for FVWM
Name:      ft-xxxThemesxxx
Version:   %{ver}
Release:   %{rel}
Copyright: GPL
Group:     X11/Window Managers
Source:    %{name}-%{version}.tar.gz
URL:       http://fvwm-themes.sourceforge.org/
BuildRoot: %{_tmppath}/%{name}-%{version}-root
Packager:  FVWM Themes Developers <fvwm-themes-devel@lists.sourceforge.net>
Autoreq:   1

Requires:  fvwm-themes = @VERSION@

Docdir:    %{prefix}/share/doc

%description
FVWM Themes is a powerful configurational framework for FVWM,
designed to be easily extendible and configurable, includes
several pre-built themes, a pack of images and sounds.

This package contains the xxxThemesxxx themes for use with the
base FVWM Themes package. This theme as well as others is also
contained in the extra FVWM Themes package. 

%description -l fr
