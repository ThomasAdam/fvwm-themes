+ "&Left	Page%menu/window-move.xpm%"	AnimatedMove w-100 w
+ "&Down	Page%menu/window-move.xpm%"	AnimatedMove w w+100
+ "&Up  	Page%menu/window-move.xpm%"	AnimatedMove w w-100

