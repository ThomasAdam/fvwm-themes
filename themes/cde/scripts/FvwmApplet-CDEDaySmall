WindowTitle {FvwmApplet-CDEDaySmall}
WindowSize 36 36		# Taille
Font		6x10

Init
 Begin
  Set $MainColorset=(GetScriptArgument 1)
  If $MainColorset <> {} Then
  Begin
   ChangeColorset 0 $MainColorset
   ChangeColorset 2 $MainColorset
  End

 Set $day  = (GetOutput {exec date} $pos 1)
 #Set $month =  (GetOutput {exec date} $pos 2)
 ChangeTitle  4 (GetOutput {exec date} $pos 3)
 ChangeTitle  3 $day
End

PeriodicTasks
 Begin
 If (RemainderOfDiv (GetTime) 30)==0 Then
 Begin
  Set $day  = (GetOutput {exec date} $pos 1)
  #Set $month =  (GetOutput {exec date} $pos 2)
  ChangeTitle  4 (GetOutput {exec date} $pos 3)
  ChangeTitle  3 $day
 End
End

Widget 2
Property
 Position 2 2
 Size 32 32
 Type ItemDraw
 Flags NoReliefString
 Icon ../themes/cde/images/module/small/date.xpm
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  End
End

