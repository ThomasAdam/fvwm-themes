WindowTitle {Color Selector}
WindowSize 316 280
Font	-adobe-helvetica-bold-r-*-*-12-*

Init
Begin
    Set $Lang = {}
    Set $Color = {}
    Set $Launched = 0
    Set $return = {}
    # Arguments
    Set $i = 1
    Set $arg = (GetScriptArgument $i)
    While $arg <> {} Do
    Begin
	Set $j = (Add $i 1)
	If $arg == {--viewer-colorset} Then
	    Set $ViewerColorset = (GetScriptArgument $j)
	If $arg == {--launched} Then
	    Set $Launched = (GetScriptArgument $j)
 	If $arg == {--lang} Then
	    Set $Lang = (GetScriptArgument $j)
	If $arg == {--color} Then
	    Set $Color = (GetScriptArgument $j)
	 If $arg == {--return-type} Then
	    Set $ReturnType = (GetScriptArgument $j)   
	Set $i = (Add $i 2)
	Set $arg = (GetScriptArgument $i)
    End

    If $ViewerColorset <> {} Then
    Begin
	ChangeColorset 998 $ViewerColorset
    End

    Set $SelFont = {-adobe-helvetica-bold-r-*-*-12-*}
    Set $ShadeFont = {-adobe-helvetica-medium-r-*-*-12-*}
    Set $SaveFont = {Sel}
    Set $nonDefaultFont = 0

    #Set $Lang = {en}
    #Set $Lang = {ru}
    # Internationalization.
    Set $locateSet = 0 
    If $Lang == {} Then
    Begin
	Set $cmd = {echo "$LANG" | cut -c1-2}
	Set $Lang = (GetOutput $cmd 1 -1)
    End
    If $Lang == {fr} Then
    Begin
    End
    If $Lang == {ru} Then
    Begin
    End
    If $locateSet == 0 Then
    Begin
    End

    Set $RainbowFile = {/home/olivier/rainbow.xpm}
    Set $GreyFile = {/home/olivier/grey.xpm}

    Set $cmd = {cat }$RainbowFile
    Set $ColorLine = (GetOutput $cmd 283 -1)
    Set $cmd = {cat }$GreyFile
    Set $GreyColorLine = (GetOutput $cmd 277 -1)

    If $ReturnType == {pixels} Then
    Begin
	Set $SignBits = 6
	Set $cmd = {xdpyinfo | grep "significant bits"}
	Set $tmp = (GetOutput $cmd 1 -1)
	Set $cmd = {perl -e '$in ="}$tmp{"; @out = $in =~ /.*(\d+)/; print "$out[0]" if $out[0] =~ /^\d+$/'}
	Set $tmp = {}
	Set $tmp = (GetOutput $cmd 1 -1)
	If $tmp <> {} Then
	    Set $SignBits  = $tmp
	Do {Echo }$tmp
    End

    If $Color <> {} Then
	Set $CurrentColor = $Color	
    Else
	Set $CurrentColor = {#02EEFF}

    Set $UpdateColors = 1
    Set $IsSecond = 0
    Do {*FvwmTheme: Colorset 26 fg black, bg #908090, HGradient 190 2 #000000 50 }$CurrentColor{ 50 #ffffff, NoShape}
    Set $LightColor = $CurrentColor
    Set $LightNumRed = (HexToNum (StrCopy $LightColor 2 3))
    Set $LightNumGreen = (HexToNum (StrCopy $LightColor 4 5))
    Set $LightNumBlue = (HexToNum (StrCopy $LightColor 6 7))
End

PeriodicTasks
Begin
    
    If $UpdateColors == 1 Then
    Begin
	Set $UpdateColors = 0
	ChangeBackColor 15 $CurrentColor
	ChangeTitle 17 $CurrentColor
	Set $Red = (StrCopy $CurrentColor 2 3)
	Set $Green = (StrCopy $CurrentColor 4 5)
	Set $Blue = (StrCopy $CurrentColor 6 7)
	Set $NumRed = (HexToNum $Red)
	Set $NumGreen = (HexToNum $Green)
	Set $NumBlue = (HexToNum $Blue)
	Set $NumR = $NumRed
	Set $NumG = $NumGreen
	Set $NumB = $NumBlue
	Set $t ={R: } $Red
	ChangeTitle 30 $t
	ChangeValue 31 $NumRed
	Set $t ={G: } $Green
	ChangeTitle 32 $t
	ChangeValue 33 $NumGreen
	Set $t ={B: } $Blue
	ChangeTitle 34 $t
	ChangeValue 35 $NumBlue
    End

End

