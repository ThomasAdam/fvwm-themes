Widget 12
Property
    Flags NoReliefString
    Position 310 65
    Size 270 150
    Font -*-fixed-medium-r-semicondensed-*-13-*
    Type List
    Title {}
Main
Case message of
 SingleClic :
 Begin
    Set $index = (GetValue 12)
    If $ThemeName <> {} Then
    Begin
	Set $CMD = {component-name }$ThemeName{ }$index{|}
	# execute the CMD
	SendSignal 999 2
	If $RES <> {0000} Then
	Begin
	    If $RES <> {1} Then
	    Begin
		Set $ComponentIndex = $index
		# 15 is not yet avaiable
		ChangeFont 13 $SelFont
		ChangeFont 14 $SelFont
		Set $ComponentName = $RES
		Set $NullMessage = 1
	    End
	    Else
	    Begin
		Set $ComponentName = {}
		# 15 is not yet avaiable
		ChangeFont 13 $ShadeFont
		ChangeFont 14 $ShadeFont
		Set $NullMessage = 1
	    End
	End
    End
 End
End

