# OK
Widget 53
Property
    Flags NoReliefString
    Position  185 370
    Size 70 20
    Type PushButton
    Title {}
Main
Case message of
SingleClic :
 Begin
    Set $break = 1 
    Set $session = {main}
    If $SMEditorState == 1 Then
	Set $session = (GetTitle 55)
    Set $config = (GetValue 52)
    If $SMEditorType == {Edit} Then
    Begin
	Set $CMD = {edit-session }$SelectedSession{:}$session{:}$config{|}
    End
    If $SMEditorType == {Add} Then
    Begin
	Set $CMD = {add-session }$session{:}$config{|}
    End
    If $SMEditorType == {Remove} Then
    Begin
	Set $CMD = {remove-session }$SelectedSession{|}
    End
    # execute the CMD
    SendSignal 999 2
    If $RES <> {0000} Then
    Begin
	If $RES == {Err1} Then
	Begin
	    Set $break = 0
	    ChangeTitle 95 $l_NameNotValid
	End
	If $RES == {Err2} Then
	Begin
	    Set $break = 0
	    ChangeTitle 95 $l_NameAlreadyUse
	End
	If $RES == {Err3} Then
	Begin
	    Set $break = 0
	    ChangeTitle 95 $l_SysErr
	End
	If $break == 1 Then
	Begin
	    # Maybe need to do the translation one day
	    If $SMEditorType == {Add} Then
	    Begin
		Set $msg = {Adding }$session{ FVWM Themes Session}
		ChangeTitle 95 $msg
	    End
	    If $SMEditorType == {Edit} Then
	    Begin
		Set $msg = {Applying Changes To }$session{ FVWM Themes Session}
		ChangeTitle 95 $msg
	    End
	    If $SMEditorType == {Remove} Then
	    Begin
		Set $msg = {Removing }$SelectedSession{ FVWM Themes Session}
		ChangeTitle 95 $msg
		Set $session = (Parse $RES 1)
		Set $RES = (Parse $RES 2)
	    End
	    ChangeValue 41 $RES
	    Set $SessionIndex = $RES
	    Set $SelectedSession = $session
	    Set $t = {Selected Session: }$SelectedSession
	    ChangeTitle 45 $t
	    If $SMEditorType <> {Remove} Then
		Set $SpecialMessage = $l_ClickNewSession
	    Else
		Set $NullMessage = 1
	    Set $HideSMEditor = 1
	    # this update also the current session ...
	    Set $UpdateSMLists = 1
	End
    End
 End
End

