# list title
Widget 40
Property
    Flags NoReliefString NoFocus
    Position 40 75
    Size 255 20
    Type ItemDraw
    Title {}
Main
Case message of
SingleClic :
 Begin
 End
End

Widget 41
Property
    Flags NoReliefString
    Position 40 100
    Size 255 150
    Font -*-fixed-medium-r-semicondensed-*-13-*
    Type List
    Title {}
Main
Case message of
SingleClic :
 Begin
    Set $break = 1
    If $SMEditorState <> 0 Then
    Begin
	ChangeTitle 95 $l_FinishEdit
	Set $break = 0
	ChangeValue 41 $SessionIndex
    End
    If $break == 1 Then
    Begin
	Set $SessionIndex = (GetValue 41)
	Set $CMD = {session-name }$SessionIndex{|}
	# execute the CMD
	SendSignal 999 2
	If $RES <> {0000} Then
	Begin
	    Set $SelectedSession = $RES
	    If $SelectedSession <> {1} Then
		Set $tmp = $l_SelectedSession{ }$SelectedSession
	    Else
	    Begin
		Set $tmp = $l_SelectedSession 
		Set $SessionIndex = 0
		Set $SelectedSession = {}
	    End
	    ChangeTitle 45 $tmp
	    Set $NullMessage = 1
	End
    End
 End
End

# Edit
Widget 42
Property
    Flags NoReliefString
    Position 330 115
    Size 80 20
    Type PushButton
    Title {}
Main
Case message of
SingleClic :
 Begin
    Set $break = 1
    If $SelectedSession == {} Then
    Begin
	ChangeTitle 95 $l_MustSelectSession
	Set $break = 0
    End
    Set $test = 0
    If $SMEditorState <> 0 Then
	Set $test = 1
    Set $test = (Mult $break $test)
    If $test == 1 Then
    Begin
	ChangeTitle 95 $l_FinishEdit
	Set $break = 0
    End
    
    If $break == 1 Then
    Begin
	If $SelectedSession == {main} Then
	Begin
	    ChangeTitle 56 $SelectedSession
	    Set $SMEditorState = 2
	End
	Else
	Begin
	    Set $SMEditorState = 1
	    ChangeTitle 55 $SelectedSession
	End
	Set $tmp = $l_B_Edit $SelectedSession $l_A_Edit
	ChangeTitle 49 $tmp
	Set $tmp = (Add $SessionIndex 1)
	ChangeValue 52 $tmp
	Set $SMEditorType = {Edit}
	Set $ShowSMEditor = 1
	Set $NullMessage = 1    
    End
 End
End

