# Set
Widget 28
Property
    Flags NoReliefString
    Position 265 380
    Size 80 20
    Type PushButton
    Title {}
Main
Case message of
SingleClic :
 Begin
    Set $SettingsVariantsIndex = (GetValue 27)
    If $SettingsVariantsIndex <> 0 Then 
    Begin
	Set $CMD = {set-options }$SettingsComponent{ default 1 }$SettingsVariantsIndex{|}
	# execute the CMD
	SendSignal 999 2
	Set $SettingsComponentIsSet = 1
	ChangeFont 23 $SelFont
	Set $UpdateSettingsListAndVariants = 1
	Set $NullMessage = 1
    End
    Else
    Begin
	ChangeTitle 95 $l_MustSelectVariant
    End
 End
End

